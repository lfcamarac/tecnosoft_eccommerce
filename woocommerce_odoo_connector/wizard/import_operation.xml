<odoo>
	<record id="inherit_import_wizard_form" model="ir.ui.view">
		<field name="name">inherit.import.operation.form</field>
		<field name="model">import.operation</field>
		<field name="inherit_id" ref="odoo_multi_channel_sale.import_wizard_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[@name='filters']" position="after">
				<div invisible="channel != 'woocommerce'">
					<group>
						<label for="woocommerce_filter_type" string="Filter Type"/>
						<field name="woocommerce_filter_type" widget="radio" nolabel = "1" />
					</group>
					<group>
						<group invisible="woocommerce_filter_type != 'by_id'">
							<label for="woocommerce_object_id" string="Object Id" />
							<field name="woocommerce_object_id" nolabel="1" required="woocommerce_filter_type == 'by_id'"/>
						</group>
						<span invisible="woocommerce_filter_type != 'by_id' or object == 'delivery.carrier'" style="color:blue">In case of import with multiple ids, Ids must be "," separated</span>
						<group invisible="woocommerce_filter_type != 'by_date'">
							<label for="woocommerce_import_date_from" string="From" />
							<field name="woocommerce_import_date_from" nolabel="1" required="woocommerce_filter_type == 'by_date'"/>
						</group>
					</group>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
