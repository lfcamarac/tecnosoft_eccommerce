<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Log List View -->
    <record id="woo_sync_log_list" model="ir.ui.view">
        <field name="name">woo.sync.log.list</field>
        <field name="model">woo.sync.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="status == 'error'"
                  decoration-success="status == 'success'"
                  decoration-warning="status == 'warning'">
                <field name="create_date" string="Fecha"/>
                <field name="instance_id"/>
                <field name="sync_type"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'success'"
                       decoration-danger="status == 'error'"
                       decoration-warning="status == 'warning'"/>
                <field name="product_tmpl_id"/>
                <field name="message" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Log Form View -->
    <record id="woo_sync_log_form" model="ir.ui.view">
        <field name="name">woo.sync.log.form</field>
        <field name="model">woo.sync.log</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="instance_id"/>
                        <field name="sync_type"/>
                        <field name="status"/>
                        <field name="create_date" string="Fecha"/>
                    </group>
                    <group>
                        <field name="product_tmpl_id"/>
                        <field name="product_id"/>
                    </group>
                </group>
                <group string="Mensaje">
                    <field name="message" nolabel="1" colspan="2"/>
                </group>
                <group string="Detalles API" name="api_details">
                    <field name="woo_request" nolabel="1"
                           colspan="2" widget="text"/>
                    <field name="woo_response" nolabel="1"
                           colspan="2" widget="text"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Log Search View -->
    <record id="woo_sync_log_search" model="ir.ui.view">
        <field name="name">woo.sync.log.search</field>
        <field name="model">woo.sync.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="message"/>
                <field name="product_tmpl_id"/>
                <field name="instance_id"/>
                <filter name="filter_errors" string="Errores"
                        domain="[('status','=','error')]"/>
                <filter name="filter_success" string="Exitosos"
                        domain="[('status','=','success')]"/>
                <separator/>
                <filter name="filter_today" string="Hoy"
                        domain="[('create_date','>=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_instance" string="Instancia"
                            context="{'group_by': 'instance_id'}"/>
                    <filter name="group_type" string="Tipo"
                            context="{'group_by': 'sync_type'}"/>
                    <filter name="group_status" string="Estado"
                            context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Log Action -->
    <record id="action_woo_sync_log" model="ir.actions.act_window">
        <field name="name">Logs de Sincronizaci√≥n</field>
        <field name="res_model">woo.sync.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_errors': 1}</field>
    </record>

</odoo>
