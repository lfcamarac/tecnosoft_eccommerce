<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Template Mapping List -->
    <record id="woo_sync_template_mapping_list" model="ir.ui.view">
        <field name="name">woo.sync.template.mapping.list</field>
        <field name="model">woo.sync.template.mapping</field>
        <field name="arch" type="xml">
            <list>
                <field name="instance_id"/>
                <field name="product_tmpl_id"/>
                <field name="woo_product_id"/>
                <field name="woo_product_type"
                       decoration-info="woo_product_type == 'variable'"
                       widget="badge"/>
                <field name="last_sync_date"/>
            </list>
        </field>
    </record>

    <!-- Template Mapping Form -->
    <record id="woo_sync_template_mapping_form" model="ir.ui.view">
        <field name="name">woo.sync.template.mapping.form</field>
        <field name="model">woo.sync.template.mapping</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="instance_id"/>
                        <field name="product_tmpl_id"/>
                        <field name="woo_product_id"/>
                        <field name="woo_product_type"/>
                        <field name="last_sync_date"/>
                    </group>
                </group>
                <field name="variant_mapping_ids" readonly="1">
                    <list>
                        <field name="product_id"/>
                        <field name="woo_variation_id"/>
                        <field name="last_sync_date"/>
                    </list>
                </field>
            </form>
        </field>
    </record>

    <!-- Template Mapping Action -->
    <record id="action_woo_sync_template_mapping" model="ir.actions.act_window">
        <field name="name">Mapeos de Productos</field>
        <field name="res_model">woo.sync.template.mapping</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Category Mapping List -->
    <record id="woo_sync_category_mapping_list" model="ir.ui.view">
        <field name="name">woo.sync.category.mapping.list</field>
        <field name="model">woo.sync.category.mapping</field>
        <field name="arch" type="xml">
            <list>
                <field name="instance_id"/>
                <field name="category_id"/>
                <field name="woo_category_id"/>
            </list>
        </field>
    </record>

    <!-- Category Mapping Action -->
    <record id="action_woo_sync_category_mapping" model="ir.actions.act_window">
        <field name="name">Mapeos de Categor√≠as</field>
        <field name="res_model">woo.sync.category.mapping</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
