<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_woo_sync" model="ir.ui.view">
        <field name="name">product.template.form.inherit.woo.sync</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_woo_push_product"
                        string="Sincronizar con Woo"
                        type="object"
                        class="btn-secondary"/>
                <button name="action_woo_pull_images"
                        string="Traer Imagen Woo"
                        type="object"
                        class="btn-secondary"/>
            </header>
        </field>
    </record>

    <record id="action_pull_images_multi" model="ir.actions.server">
        <field name="name">Traer Im√°genes de Woo</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_woo_pull_images()
        </field>
    </record>
</odoo>
