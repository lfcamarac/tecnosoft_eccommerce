<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Full Product Sync: creates new products, updates all fields -->
        <record id="cron_woo_sync_full" model="ir.cron">
            <field name="name">WooSync: Sincronización completa de productos</field>
            <field name="model_id" ref="model_woo_sync_cron"/>
            <field name="state">code</field>
            <field name="code">model._cron_full_sync()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="priority">10</field>
        </record>

        <!-- Stock & Price Sync: lightweight, only updates stock and price -->
        <record id="cron_woo_sync_stock_price" model="ir.cron">
            <field name="name">WooSync: Sincronización de stock y precios</field>
            <field name="model_id" ref="model_woo_sync_cron"/>
            <field name="state">code</field>
            <field name="code">model._cron_stock_price_sync()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="priority">5</field>
        </record>

    </data>
</odoo>
