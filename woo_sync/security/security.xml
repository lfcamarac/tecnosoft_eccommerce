<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_woo_sync" model="ir.module.category">
            <field name="name">WooSync</field>
            <field name="sequence">30</field>
        </record>

        <record id="group_woo_sync_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_woo_sync"/>
            <field name="implied_ids" eval="[
                (4, ref('base.group_user')),
            ]"/>
        </record>

        <record id="group_woo_sync_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_woo_sync"/>
            <field name="implied_ids" eval="[
                (4, ref('group_woo_sync_user')),
            ]"/>
            <field name="users" eval="[
                (4, ref('base.user_root')),
                (4, ref('base.user_admin')),
            ]"/>
        </record>

    </data>
</odoo>
