<odoo>
	<data>
		<record id="channel_order_mappings_search" model="ir.ui.view">
			<field name="name">channel.order.mappings.search</field>
			<field name="model">channel.order.mappings</field>
			<field name="arch" type="xml">
				<search string="Channel order Mappings">
				    <field name="odoo_order_id" string = "Odoo ID"/>
					<field
						name         ="order_name"
						filter_domain="[('order_name','ilike',self)]"
					/>
					<field
						name         ="store_order_id"
						filter_domain="[('store_order_id','ilike',self)]"
						string = "Order ID"
					/>
					<field name="odoo_partner_id"/>
					<separator/>
                    <filter string="Create Date" name="filter_create_date" date="create_date"/>

					<group expand="0" string="Group By...">
						<filter
							string ="Instance"
							name   ="filter_by_channel_id"
							context="{'group_by':'channel_id'}"
						/>
						<filter
							string ="Need Update"
							name   ="need_sync"
							domain ="[]"
							context="{'group_by':'need_sync'}"
						/>
					</group>
                    <searchpanel>
                        <field name="ecom_store" string="Channels" enable_counters="1"/>
                        <field name="channel_id" string="Instances" enable_counters="1"/>
                    </searchpanel>
				</search>
			</field>
		</record>

		<record id="channel_order_mapping_form" model="ir.ui.view">
			<field name="name">channel.order.mappings.form</field>
			<field name="model">channel.order.mappings</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form edit="false">
					<sheet>
						<group>
							<group>
								<field name="channel_id"/>
								<field name="ecom_store"/>
							</group>
							<group>
								<field name="operation"/>
								<field name="need_sync"/>
							</group>
						</group>
						<group >
						    <group>
							      <field name="order_name"/>
							      <field name="odoo_partner_id"/>
							      <field name="store_order_id"/>
								  <field name="store_order_status"/>
							</group>
							<group>
							      <field name="create_date" />
					               <field name="write_date" />
                                                     
							</group>
						
							
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="channel_order_mapping_tree" model="ir.ui.view">
			<field name="name">channel.order.mappings.tree</field>
			<field name="model">channel.order.mappings</field>
			
			<field name="arch" type="xml">
				<list string="Channel order Mapping" decoration-danger="need_sync=='yes'" decoration-success="need_sync == 'no'" default_order="create_date desc">
					<field name="id" optional="hide"/>
					<field name="channel_id" optional="show"/>
					<field name="store_order_id" decoration-bf="1"/>
					<field name="order_name" decoration-bf="1"/>
					<field name="odoo_partner_id" decoration-bf="1"/>
                    <field name="operation" widget="badge" decoration-success="operation == 'import'" decoration-warning="operation == 'export'" optional="hide"/>
					<field name="create_date" optional="show"/>
					<field name="write_date" optional="hide"/>
                    <field name="need_sync" widget="badge" decoration-success="need_sync == 'no'" decoration-danger="need_sync == 'yes'" optional="hide"/>
                    <field name="create_uid" widget="many2one_avatar_user" optional="hide"/>
					<field name="store_order_status" optional="hide"/>
				</list>
			</field>
		</record>

		<record id="channel_order_mapping_pivot" model="ir.ui.view">
			<field name="name">channel.order.mappings.pivot</field>
			<field name="model">channel.order.mappings</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot>
					<field name="channel_id" type = "col"/>
					<field name="create_date" type= "row" interval ="day"/>
				</pivot>
			</field>
		</record>

		<record id="channel_order_mapping_action_id" model="ir.actions.act_window">
			<field name="name">Channel Order Mappings</field>
			<field name="res_model">channel.order.mappings</field>
			<field name="view_mode">list,form,pivot</field>
			<field name="context">
{
	"search_default_filter_by_ecom_store":0
}
			</field>
			<field name="view_id" ref="channel_order_mapping_tree"/>
		</record>

		<menuitem
			id      ="channel_order_mapping_menu_id"
			name    ="Order"
			parent  ="menu_id_channel_mappings"
			action  ="channel_order_mapping_action_id"
			sequence="6"
		/>
	</data>
</odoo>
